
package com.mycompany.poo_trabajo1;
import java.util.Scanner;

public class POO_Trabajo1 {

    public static void main(String[] args) {
        //Definimos las variables de las edades como enteros.
        int juan;
        int alberto;
        int ana;
        int mama;
        
        //Ingresamos el valor de la edad de Juan
        
        Scanner entrada = new Scanner(System.in);
        System.out.println("Ingrese la edad de Juan :");
        
        //Para simplicidad, realizamos las operaciones y las almacenamos en las varibales.
        
        juan = entrada.nextInt();
        alberto = 2*(juan/3) ;
        ana = 4*(juan/3) ;
        mama = juan + alberto + ana;
    
        //Imprimimos las edades correspondientes a los miembros de la familia
        
        System.out.println("La edad de Juan es:" + juan );
        System.out.println("La edad de Alberto es:" + alberto );
        System.out.println("La edad de Ana es:" + ana );
        System.out.println("La edad de la mam√° de Juan es:" + mama);
        
           
    }
}
